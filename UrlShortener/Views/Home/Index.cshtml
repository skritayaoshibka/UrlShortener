@{
    ViewData["Title"] = "Url Shortener";
}

<div class="mx-auto w-75 m-3">
    <h2 class="text-center mb-2">Сокращение ссылки</h2>
    <hr />
    <form asp-controller="URL" asp-action="CreateShortUrl">
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <span class="input-group-text">Ссылка</span>
            </div>
            <input name="fullUrl" class="form-control" />
        </div>

        <div class="form-group float-right">
            <input type="submit" value="Сократить" class="btn btn-success" />
        </div>
    </form>
</div>